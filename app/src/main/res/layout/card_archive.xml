<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin_sides"
    android:layout_marginTop="@dimen/margin_border"
    android:layout_marginRight="@dimen/card_margin_sides"
    android:background="@drawable/back_thirty_radius_white"
    android:layoutDirection="rtl">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_border"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintLeft_toRightOf="@id/guideline_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_travel_code"
            style="@style/gray_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:drawableStart="@drawable/ic_public_pink_24dp"
            android:layoutDirection="rtl"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            android:text="#aa"
            android:textDirection="rtl">

        </TextView>

        <TextView
            android:id="@+id/tv_travel_date"
            style="@style/text_pink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:drawableStart="@drawable/ic_date_range_pink_24dp"
            android:drawablePadding="10dp"
            android:layoutDirection="ltr"
            android:text="1397/8/22">

        </TextView>


    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/margin_border"
        android:background="@color/gray"
        app:layout_constraintLeft_toRightOf="@id/guideline_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/lin1" />

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_border"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/view1">

        <TextView
            android:id="@+id/tv_start_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location_green"
            android:drawablePadding="5dp"
            android:layoutDirection="rtl"
            android:text="ولیعصر،میدان ولیعصر،پلاک 1،واحد5"
            android:textColor="@color/color06"
            android:textSize="16sp"
            android:textStyle="bold" />

