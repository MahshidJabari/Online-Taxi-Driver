<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color08">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color06"
        android:paddingTop="25dp"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_chevron_right_white_24dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_edit_white_24dp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:adjustViewBounds="true"
        android:background="@color/color08"
        android:rotation="180"
        android:src="@drawable/ic_bottom_back_dark_blue" />

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_top"
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="نوع سفیر"
                android:textColor="@color/color05"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/back_profile"
                android:elevation="6dp"
                android:scaleType="center" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/flo_btn"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-60dp"
                android:backgroundTint="@color/green"
                android:elevation="20dp"
                android:scaleType="center"
                android:src="@drawable/ic_camera_alt_black_24dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="نام سفیر"
                android:textColor="@color/color05"
                android:textSize="25sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/ic_back_list"
        android:elevation="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_mail_outline_gray_24dp"
            android:gravity="center"
            android:hint="آدرس ایمیل"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/color01" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_phone_black_24dp"
            android:gravity="center"
            android:hint="شماره تلفن همراه"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/color01" />

        <TextView
            android:id="@+id/tv_numShaba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="شماره شبا"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/color01" />

        <TextView
            android:id="@+id/tv_helpnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="تماس با پشتیبانی"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/color01" />

        <TextView
            android:id="@+id/tv_debugnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="اشکال زدایی"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/color01" />

        <TextView
            android:id="@+id/tv_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="آموزش کار با اپلیکیشن"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/color01" />

        <TextView
            android:id="@+id/tv_telegramchannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="کانال تلگرام سفیران"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/color01" />

        <TextView
            android:id="@+id/tv_creditcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="کانال تلگرام سفیران"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/color01" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/rel2"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_top_back_pink" />

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/pink"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="30dp"
        android:paddingRight="12dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:text="@string/exit_profile"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_profile"
            android:rotation="180"
            android:src="@drawable/limit_icon_signup_bottom" />

    </RelativeLayout>

</RelativeLayout>