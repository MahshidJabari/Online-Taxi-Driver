<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color08">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color06"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:src="@drawable/ic_edit_white_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/title_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/tv_return"
            style="@style/tv_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="backOnclick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4"
            app:layout_constraintLeft_toRightOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.2" />

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="backOnclick"
            android:src="@drawable/ic_chevron_right_white_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_return"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color08"
        app:layout_constraintBottom_toTopOf="@id/guideline_underHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_middle">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_shape_dark_blue">

        </View>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_underHeader"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:translationY="-30dp"
        app:layout_constraintHeight_percent="0.17"
        app:layout_constraintTop_toBottomOf="@id/guideline_underHeader">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_inner_left"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_inner_top"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/tv_vehicle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_type"
            android:textColor="@color/color05"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/guideline_inner_left"
            app:layout_constraintTop_toBottomOf="@id/guideline_inner_top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_inner_mid"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintRight_toLeftOf="@id/guideline_inner_mid"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/back_profile"
                android:elevation="6dp"
                android:scaleType="center" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-50dp"
                android:backgroundTint="@color/green"
                android:elevation="20dp"
                android:scaleType="center"
                android:src="@drawable/ic_camera_alt_black_24dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_name"
            android:textColor="@color/color05"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@id/guideline_inner_right"
            app:layout_constraintTop_toTopOf="@id/guideline_inner_top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_inner_right"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_back_list"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintLeft_toRightOf="@id/guideline_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/con2">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right_"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left_"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />


        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_mail_outline_gray_24dp"
            android:gravity="center"
            android:hint="@string/email_address"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/tv_email" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:gravity="center"
            android:hint="@string/mobile_num"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/view1" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/tv_phone" />

        <Button
            android:id="@+id/btn_numSheba"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_chevron_left_black_24dp"
            android:gravity="start"
            android:paddingBottom="8dp"
            android:text="@string/sheba"
            android:textColor="@color/darkGray"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/view2" />

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/btn_numSheba" />

        <Button
            android:id="@+id/btn_support"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_chevron_left_black_24dp"
            android:gravity="start"
            android:paddingBottom="8dp"
            android:text="@string/call_support"
            android:textColor="@color/darkGray"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/view3" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/btn_support" />

        <Button
            android:id="@+id/btn_debugnum"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_chevron_left_black_24dp"
            android:gravity="start"
            android:text="@string/debug"
            android:textColor="@color/darkGray"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/view4" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/btn_debugnum" />

        <Button
            android:id="@+id/btn_tutorial"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_chevron_left_black_24dp"
            android:gravity="start"
            android:text="@string/learn"
            android:textColor="@color/darkGray"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/view5" />

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/btn_tutorial" />

        <Button
            android:id="@+id/btn_telegramchannel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_chevron_left_black_24dp"
            android:gravity="start"
            android:paddingBottom="8dp"
            android:text="@string/telegram_channel"
            android:textColor="@color/darkGray"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/view6" />

        <View
            android:id="@+id/view7"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/btn_telegramchannel" />

        <TextView
            android:id="@+id/tv_creditcard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_chevron_left_black_24dp"
            android:gravity="start"
            android:hint="@string/driver_card"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color01"
            android:textSize="15sp"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_"
            app:layout_constraintTop_toBottomOf="@id/view7" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_upload_photo"
        style="@style/text_dark_blue_18"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back_thirty_radius_white"
        android:drawableEnd="@drawable/ic_file_upload_blue_24dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:layoutDirection="rtl"
        android:paddingRight="10dp"
        android:text="@string/send_photo"
        android:onClick="onClickDocument"
        app:layout_constraintBottom_toTopOf="@id/guideline_aboveEnd"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cons2"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_aboveEnd"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.89" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color08"
        app:layout_constraintBottom_toTopOf="@id/guideline_end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_aboveEnd">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_shape_pink"
            android:scaleX="-1"
            android:scaleY="-1">

        </View>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />

    <LinearLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/pink"
        android:gravity="center"
        android:layoutDirection="rtl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintTop_toBottomOf="@id/guideline_end">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:onClick="logout"
            android:src="@drawable/limit_icon_signup_bottom" />

        <TextView
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="top"
            android:onClick="logout"
            android:text="@string/exit_profile" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>