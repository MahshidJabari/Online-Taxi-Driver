<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color08">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color06"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/title_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/income"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/tv_return"
            style="@style/tv_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4"
            app:layout_constraintLeft_toRightOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.2" />

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:src="@drawable/ic_chevron_right_white_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_return"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color08"
        app:layout_constraintBottom_toTopOf="@id/guideline_underHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_middle">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_shape_dark_blue">

        </View>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_underHeader"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right_right"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_left"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_radius_thirty_white"
        android:padding="10dp"
        android:translationY="-40dp"
        app:layout_constraintLeft_toRightOf="@id/guideline_left_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right_right"
        app:layout_constraintTop_toBottomOf="@id/guideline_underHeader">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left_card1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right_card1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_mid_card1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.27" />


        <TextView
            style="@style/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_income"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_today_income"
            style="@style/mid_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            app:layout_constraintRight_toLeftOf="@id/guideline_mid_card1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/toman"
            android:textDirection="rtl"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card1"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card1"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card1"
            app:layout_constraintTop_toBottomOf="@id/tv_today_income" />

        <TextView
            style="@style/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:text="@string/week_income"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card1"
            app:layout_constraintTop_toBottomOf="@id/view2" />

        <TextView
            android:id="@+id/tv_week_income"
            style="@style/mid_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:textDirection="ltr"
            app:layout_constraintRight_toLeftOf="@id/guideline_mid_card1"
            app:layout_constraintTop_toBottomOf="@id/view2" />

        <TextView
            style="@style/end_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/toman"
            android:textDirection="rtl"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card1"
            app:layout_constraintTop_toBottomOf="@id/view2" />

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card1"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card1"
            app:layout_constraintTop_toBottomOf="@id/tv_week_income" />

        <TextView
            style="@style/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/month_income"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card1"
            app:layout_constraintTop_toBottomOf="@id/view3" />


        <TextView
            android:id="@+id/tv_month_income"
            style="@style/mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            app:layout_constraintRight_toLeftOf="@id/guideline_mid_card1"
            app:layout_constraintTop_toBottomOf="@id/view3" />

        <TextView
            style="@style/end_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/toman"
            android:textDirection="rtl"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card1"
            app:layout_constraintTop_toBottomOf="@id/view3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_radius_thirty_white"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="@id/guideline_left_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right_right"
        app:layout_constraintTop_toBottomOf="@id/cons2">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left_card2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right_card2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_mid_card2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.27" />


        <TextView
            style="@style/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_online_time"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_today_online"
            style="@style/mid_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            app:layout_constraintRight_toLeftOf="@id/guideline_mid_card2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/hour"
            android:textDirection="rtl"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card2"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view2_card2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card2"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card2"
            app:layout_constraintTop_toBottomOf="@id/tv_today_online" />

        <TextView
            style="@style/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:text="@string/week_online"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card2"
            app:layout_constraintTop_toBottomOf="@id/view2_card2" />

        <TextView
            android:id="@+id/tv_week_online"
            style="@style/mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:textDirection="ltr"
            app:layout_constraintRight_toLeftOf="@id/guideline_mid_card2"
            app:layout_constraintTop_toBottomOf="@id/view2_card2" />

        <TextView
            style="@style/end_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/hour"
            android:textDirection="rtl"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card2"
            app:layout_constraintTop_toBottomOf="@id/view2_card2" />

        <View
            android:id="@+id/view3_card2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card2"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card2"
            app:layout_constraintTop_toBottomOf="@id/tv_week_online" />


        <TextView
            style="@style/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/month_online"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card2"
            app:layout_constraintTop_toBottomOf="@id/view3_card2" />


        <TextView
            android:id="@+id/tv_month_online"
            style="@style/mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            app:layout_constraintRight_toLeftOf="@id/guideline_mid_card2"
            app:layout_constraintTop_toBottomOf="@id/view3_card2" />

        <TextView
            style="@style/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/hour"
            android:textDirection="rtl"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card2"
            app:layout_constraintTop_toBottomOf="@id/view3_card2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_radius_thirty_white"
        android:padding="10dp"
        android:translationY="30dp"
        app:layout_constraintLeft_toRightOf="@id/guideline_left_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right_right"
        app:layout_constraintTop_toBottomOf="@id/cons3">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left_card3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right_card3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_mid_card3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.27" />


        <TextView
            style="@style/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remain_day"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_remain_day"
            style="@style/mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            android:gravity="end"
            app:layout_constraintRight_toLeftOf="@id/guideline_mid_card3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/day"
            android:textDirection="rtl"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card3"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view2_card3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card3"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card3"
            app:layout_constraintTop_toBottomOf="@id/tv_remain_day" />

        <TextView
            style="@style/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:text="@string/whole_income"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card3"
            app:layout_constraintTop_toBottomOf="@id/view2_card3" />

        <TextView
            android:id="@+id/tv_whole_income"
            style="@style/mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:textDirection="ltr"
            app:layout_constraintRight_toLeftOf="@id/guideline_mid_card3"
            app:layout_constraintTop_toBottomOf="@id/view2_card3" />

        <TextView
            style="@style/end_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/toman"
            android:textDirection="rtl"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card3"
            app:layout_constraintTop_toBottomOf="@id/view2_card3" />

        <View
            android:id="@+id/view3_card3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/color01"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card3"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card3"
            app:layout_constraintTop_toBottomOf="@id/tv_whole_income" />


        <TextView
            style="@style/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/comis"
            app:layout_constraintRight_toLeftOf="@id/guideline_right_card3"
            app:layout_constraintTop_toBottomOf="@id/view3_card3" />


        <TextView
            android:id="@+id/tv_comis"
            style="@style/mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            app:layout_constraintRight_toLeftOf="@id/guideline_mid_card3"
            app:layout_constraintTop_toBottomOf="@id/view3_card3" />

        <TextView
            style="@style/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/toman"
            android:textDirection="rtl"
            app:layout_constraintLeft_toRightOf="@id/guideline_left_card3"
            app:layout_constraintTop_toBottomOf="@id/view3_card3" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--||||||||||||||||||floating buttons|||||||||||||||||||||||||||-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_floatingBtn_top"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical1"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical3"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical4"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/fab_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/limit_icon_profile"
        android:translationY="5dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/guideline_floatingBtn_bottom"
        app:layout_constraintLeft_toRightOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/guideline_floatingBtn_top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.46" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_horizontal"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_horizontal2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_card_giftcard_white_24dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/guideline_floatingBtn_bottom"
        app:layout_constraintRight_toLeftOf="@id/guideline_mid_vertical3"
        app:layout_constraintLeft_toRightOf="@id/guideline_mid_vertical4"
        app:layout_constraintTop_toBottomOf="@id/guideline_floatingBtn_top" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_attach_money_white_24dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/guideline_floatingBtn_bottom"
        app:layout_constraintRight_toLeftOf="@id/guideline_mid_vertical1"
        app:layout_constraintLeft_toRightOf="@id/guideline_mid_vertical"
        app:layout_constraintTop_toBottomOf="@id/guideline_floatingBtn_top" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_white_24dp"
        android:translationY="5dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/guideline_floatingBtn_bottom"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/guideline_floatingBtn_top" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_floatingBtn_bottom"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />


    <!--|||||||||||||||||||||||||||||||||||||||||||||||||-->


    <androidx.constraintlayout.widget.Guideline
