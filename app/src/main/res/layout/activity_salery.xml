<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color08">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color06"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/title_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/incomes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.4" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color08"
        app:layout_constraintBottom_toTopOf="@id/guideline_underHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_middle">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_shape_dark_blue">

        </View>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_underHeader"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right_right"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_left"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border2"
        android:translationY="-30dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_aboveEnd"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/guideline_left_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right_right"
        app:layout_constraintTop_toBottomOf="@id/guideline_underHeader"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_inner_left"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_inner_right"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/guide_inner_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner_right"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/start_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:paddingTop="10dp"
                android:text="@string/today_income"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/tv_today_income"
                style="@style/mid_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="0"
                android:textDirection="ltr" />

            <TextView
                style="@style/end_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="@string/toman"
                android:textDirection="rtl" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/darkGray"
            app:layout_constraintLeft_toRightOf="@id/guide_inner_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner_right"
            app:layout_constraintTop_toBottomOf="@+id/lin1" />

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/guide_inner_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner_right"
            app:layout_constraintTop_toBottomOf="@id/view1">

            <TextView
                style="@style/start_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:paddingTop="10dp"
                android:text="@string/week_income"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/tv_week_income"
                style="@style/mid_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="0"
                android:textDirection="ltr" />

            <TextView
                style="@style/end_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="@string/toman"
                android:textDirection="rtl" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/darkGray"
            app:layout_constraintLeft_toRightOf="@id/guide_inner_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner_right"
            app:layout_constraintTop_toBottomOf="@+id/lin2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/guide_inner_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner_right"
            app:layout_constraintTop_toBottomOf="@id/view2">

            <TextView
                style="@style/start_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:paddingTop="10dp"
                android:text="@string/month_income"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/tv_month_income"
                style="@style/mid_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="0"
                android:textDirection="ltr" />

            <TextView
                style="@style/end_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="@string/toman"
                android:textDirection="rtl" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border2"
        app:layout_constraintBottom_toTopOf="@id/guideline_aboveEnd"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/guideline_left_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right_right"
        app:layout_constraintTop_toBottomOf="@id/cons1"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_inner2_left"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_inner2_right"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/guide_inner2_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner2_right"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/start_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:paddingTop="10dp"
                android:text="@string/today_online_time"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/tv_today_online"
                style="@style/mid_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="0"
                android:textDirection="ltr" />

            <TextView
                style="@style/end_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="@string/hour"
                android:textDirection="rtl" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/darkGray"
            app:layout_constraintLeft_toRightOf="@id/guide_inner2_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner2_right"
            app:layout_constraintTop_toBottomOf="@+id/lin3" />

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/guide_inner2_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner2_right"
            app:layout_constraintTop_toBottomOf="@id/view3">

            <TextView
                style="@style/start_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:paddingTop="10dp"
                android:text="@string/week_online"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/tv_week_online"
                style="@style/mid_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="0"
                android:textDirection="ltr" />

            <TextView
                style="@style/end_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="@string/hour"
                android:textDirection="rtl" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/darkGray"
            app:layout_constraintLeft_toRightOf="@id/guide_inner2_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner2_right"
            app:layout_constraintTop_toBottomOf="@+id/lin4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/guide_inner2_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner2_right"
            app:layout_constraintTop_toBottomOf="@id/view4">

            <TextView
                style="@style/start_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:paddingTop="10dp"
                android:text="@string/month_online"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/tv_month_online"
                style="@style/mid_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="0"
                android:textDirection="ltr" />

            <TextView
                style="@style/end_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="@string/hour"
                android:textDirection="rtl" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border2"
        app:layout_constraintBottom_toTopOf="@id/guideline_aboveEnd"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/guideline_left_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right_right"
        app:layout_constraintTop_toBottomOf="@id/cons2"
        app:layout_constraintVertical_bias="0.3">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_inner3_left"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_inner3_right"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/guide_inner3_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner3_right"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/start_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:paddingTop="10dp"
                android:text="@string/remain_day"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/tv_remain_day"
                style="@style/mid_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="0"
                android:textDirection="ltr" />

            <TextView
                style="@style/end_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="@string/day"
                android:textDirection="rtl" />
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/darkGray"
            app:layout_constraintLeft_toRightOf="@id/guide_inner3_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner3_right"
            app:layout_constraintTop_toBottomOf="@+id/lin5" />

        <LinearLayout
            android:id="@+id/lin6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/guide_inner3_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner3_right"
            app:layout_constraintTop_toBottomOf="@id/view5">

            <TextView
                style="@style/start_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:paddingTop="10dp"
                android:text="@string/whole_income"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/tv_whole_income"
                style="@style/mid_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="0"
                android:textDirection="ltr" />

            <TextView
                style="@style/end_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="@string/toman"
                android:textDirection="rtl" />
        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/darkGray"
            app:layout_constraintLeft_toRightOf="@id/guide_inner3_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner3_right"
            app:layout_constraintTop_toBottomOf="@+id/lin6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintLeft_toRightOf="@id/guide_inner3_left"
            app:layout_constraintRight_toLeftOf="@id/guide_inner3_right"
            app:layout_constraintTop_toBottomOf="@id/view6">

            <TextView
                style="@style/start_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:paddingTop="10dp"
                android:text="@string/comis"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/tv_comis"
                style="@style/mid_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="0"
                android:textDirection="ltr" />

            <TextView
                style="@style/end_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="10dp"
                android:text="@string/toman"
                android:textDirection="rtl" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--||||||||||||||||||floating buttons|||||||||||||||||||||||||||-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_floatingBtn_top"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical1"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical3"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical4"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/fab_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/limit_icon_profile"
        android:translationY="5dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/guideline_floatingBtn_bottom"
        app:layout_constraintLeft_toRightOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/guideline_floatingBtn_top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_vertical2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.46" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_horizontal"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid_horizontal2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_card_giftcard_white_24dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/guideline_floatingBtn_bottom"
        app:layout_constraintLeft_toRightOf="@id/guideline_mid_vertical4"
        app:layout_constraintRight_toLeftOf="@id/guideline_mid_vertical3"
        app:layout_constraintTop_toBottomOf="@id/guideline_floatingBtn_top" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_attach_money_white_24dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/guideline_floatingBtn_bottom"
        app:layout_constraintLeft_toRightOf="@id/guideline_mid_vertical"
        app:layout_constraintRight_toLeftOf="@id/guideline_mid_vertical1"
        app:layout_constraintTop_toBottomOf="@id/guideline_floatingBtn_top" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_white_24dp"
        android:translationY="5dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/guideline_floatingBtn_bottom"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
